@model IEnumerable<Payroll.Core.Entities.Employee>

@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

<p>
    <a asp-action="Add">Add New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.Person.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Person.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Salary)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.BenefitsDeduction)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(i => item.Person.LastName)
            </td>
            <td>
                @Html.DisplayFor(i => item.Person.FirstName)
            </td>
            <td>
                @string.Format("{0:c}", item.Salary)
            </td>
            <td>
                @string.Format("{0:c}", item.BenefitsDeduction)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
            </td>
        </tr>
    }
    </tbody>
</table>